<Page x:Class="PhotoBooth.Pages.StyleSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:fa="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Style Selection">
    
    <Grid>
        <!-- Clean Dark Background - No Glows -->
        <Grid.Background>
            <SolidColorBrush Color="#0a0a0a"/>
        </Grid.Background>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Back Button and Logo -->
            <Grid Grid.Row="0" Margin="20,20,20,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                        Name="BackButton"
                        Cursor="Hand"
                        Click="BackButton_Click"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0">
                    <StackPanel Orientation="Horizontal">
                        <fa:PackIconFontAwesome Kind="ArrowLeftSolid"
                                                Width="18" Height="18"
                                                Foreground="White"
                                                VerticalAlignment="Center"
                                                Margin="0,0,8,0"/>
                        <TextBlock Text="Back" 
                                  FontSize="15" 
                                  FontWeight="Medium"
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Logo/Brand Center -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <fa:PackIconFontAwesome Kind="PaintBrushSolid"
                                           Width="18" Height="18"
                                           Foreground="#EAB308"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                    <TextBlock Text="Choose Your Style"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Heading Section -->
            <StackPanel Grid.Row="1" 
                       Name="TitleSection"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,60"
                       Opacity="0">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="Pick Your Vibe"
                              FontFamily="Cormorant Garamond"
                              FontSize="48"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Opacity="0">
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="20"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                        From="0" To="1"
                                                        Duration="0:0:0.8"
                                                        BeginTime="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="20" To="0"
                                                        Duration="0:0:0.8"
                                                        BeginTime="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <fa:PackIconFontAwesome Kind="StarSolid"
                                           Width="32" Height="32"
                                           Foreground="#EAB308"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"
                                           Opacity="0">
                        <fa:PackIconFontAwesome.RenderTransform>
                            <TranslateTransform Y="20"/>
                        </fa:PackIconFontAwesome.RenderTransform>
                        <fa:PackIconFontAwesome.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                        From="0" To="1"
                                                        Duration="0:0:0.6"
                                                        BeginTime="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="20" To="0"
                                                        Duration="0:0:0.6"
                                                        BeginTime="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </fa:PackIconFontAwesome.Triggers>
                    </fa:PackIconFontAwesome>
                    <fa:PackIconFontAwesome Kind="StarSolid"
                                           Width="28" Height="28"
                                           Foreground="#D6AD70"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"
                                           Opacity="0">
                        <fa:PackIconFontAwesome.RenderTransform>
                            <TranslateTransform Y="20"/>
                        </fa:PackIconFontAwesome.RenderTransform>
                        <fa:PackIconFontAwesome.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                        From="0" To="1"
                                                        Duration="0:0:0.6"
                                                        BeginTime="0:0:0.7">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="20" To="0"
                                                        Duration="0:0:0.6"
                                                        BeginTime="0:0:0.7">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </fa:PackIconFontAwesome.Triggers>
                    </fa:PackIconFontAwesome>
                </StackPanel>
                
                <TextBlock Text="Choose a layout style to get the party started!"
                          FontSize="18"
                          FontWeight="Medium"
                          Foreground="#808080"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"
                          Margin="0,15,0,0"/>
            </StackPanel>

            <!-- Layout Cards Grid -->
            <Border Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="20,0">
                <Grid Name="StyleButtonsGrid"
                      Opacity="0"
                      HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                
                <!-- Style 1: Solo Shot - HIDDEN -->
                <Button Tag="1"
                        Grid.Column="0"
                        Visibility="Collapsed"
                        Margin="8"
                        Cursor="Hand"
                        Click="StyleButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="CardBorder"
                                    Background="#141414"
                                    CornerRadius="12"
                                    BorderBrush="#32312E"
                                    BorderThickness="1"
                                    Padding="16">
                                <Grid>
                                    <StackPanel>
                                        <!-- Layout Preview Box -->
                                        <Border Background="#0F0F0F"
                                                CornerRadius="12"
                                                Padding="16"
                                                MaxHeight="240"
                                                Margin="0,0,0,16">
                                            <Viewbox Stretch="Uniform">
                                                <!-- Single photo preview -->
                                                <Border Width="120" Height="160"
                                                        CornerRadius="8">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="#EAB308" Opacity="0.4"/>
                                                    </Border.Background>
                                                </Border>
                                            </Viewbox>
                                        </Border>
                                        
                                        <!-- Title & Description -->
                                        <TextBlock x:Name="TitleText"
                                                  Text="Solo Shot"
                                                  FontFamily="Cormorant Garamond"
                                                  FontSize="18"
                                                  FontWeight="SemiBold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,6"/>
                                        <TextBlock Text="1 Frame · Classic"
                                                  FontSize="14"
                                                  FontWeight="Normal"
                                                  Foreground="#808080"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Checkmark in rounded circle (hidden by default) -->
                                    <Border x:Name="CheckMark"
                                            Width="24" Height="24"
                                            CornerRadius="12"
                                            Background="#EAB308"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,8,8,0"
                                            Opacity="0">
                                        <fa:PackIconFontAwesome Kind="CheckSolid"
                                                                Width="14" Height="14"
                                                                Foreground="White"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CardBorder" Property="BorderBrush" Value="#EAB308"/>
                                    <Setter TargetName="CardBorder" Property="Background" Value="#1A1A1A"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-8"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="VerticalContentAlignment" Value="Top"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Style 2: Dynamic Duo (Selected by default) -->
                <Button Tag="2"
                        Grid.Column="2"
                        Name="Style2Button"
                        Margin="8"
                        Cursor="Hand"
                        Click="StyleButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="CardBorder"
                                    Background="#141414"
                                    CornerRadius="12"
                                    BorderBrush="#32312E"
                                    BorderThickness="1"
                                    Padding="16">
                                <Grid>
                                    <!-- Main content -->
                                    <StackPanel>
                                        <Border Background="#0F0F0F"
                                                CornerRadius="16"
                                                Padding="16"
                                                MaxHeight="240"
                                                Margin="0,0,0,16">
                                            <Viewbox Stretch="Uniform">
                                                <!-- 2 photos stacked vertically -->
                                                <StackPanel Width="100" Height="200">
                                                    <Border Height="90" CornerRadius="8" Margin="0,0,0,8">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#EAB308" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Height="90" CornerRadius="8">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#D6AD70" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                </StackPanel>
                                            </Viewbox>
                                        </Border>
                                        
                                        <TextBlock x:Name="TitleText"
                                                  Text="Dynamic Duo"
                                                  FontFamily="Cormorant Garamond"
                                                  FontSize="18"
                                                  FontWeight="SemiBold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,6"/>
                                        <TextBlock Text="2 Frames · Vertical"
                                                  FontSize="14"
                                                  FontWeight="Normal"
                                                  Foreground="#808080"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Checkmark in rounded circle (hidden by default) -->
                                    <Border x:Name="CheckMark"
                                            Width="24" Height="24"
                                            CornerRadius="12"
                                            Background="#EAB308"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,8,8,0"
                                            Opacity="0">
                                        <fa:PackIconFontAwesome Kind="CheckSolid"
                                                               Width="14" Height="14"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CardBorder" Property="BorderBrush" Value="#EAB308"/>
                                    <Setter TargetName="CardBorder" Property="Background" Value="#1A1A1A"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-8"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Style 3: Quad Grid (4 photos in 2x2) - HIDDEN -->
                <Button Tag="3"
                        Grid.Column="4"
                        Visibility="Collapsed"
                        Margin="8"
                        Cursor="Hand"
                        Click="StyleButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="CardBorder"
                                    Background="#141414"
                                    CornerRadius="12"
                                    BorderBrush="#32312E"
                                    BorderThickness="1"
                                    Padding="16">
                                <Grid>
                                    <StackPanel>
                                        <Border Background="#0F0F0F"
                                                CornerRadius="12"
                                                Padding="16"
                                                MaxHeight="240"
                                                Margin="0,0,0,16">
                                            <Viewbox Stretch="Uniform">
                                                <!-- 4 photos in 2x2 grid -->
                                                <Grid Width="120" Height="160">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Row="0" Grid.Column="0" CornerRadius="4" Margin="2">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#EAB308" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Grid.Row="0" Grid.Column="1" CornerRadius="4" Margin="2">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#D6AD70" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Grid.Row="1" Grid.Column="0" CornerRadius="4" Margin="2">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#D6AD70" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Grid.Row="1" Grid.Column="1" CornerRadius="4" Margin="2">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#EAB308" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                </Grid>
                                            </Viewbox>
                                        </Border>
                                        
                                        <TextBlock x:Name="TitleText"
                                                  Text="Quad Grid"
                                                  FontFamily="Cormorant Garamond"
                                                  FontSize="18"
                                                  FontWeight="SemiBold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,6"/>
                                        <TextBlock Text="4 Frames · Grid"
                                                  FontSize="14"
                                                  FontWeight="Normal"
                                                  Foreground="#808080"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Checkmark in rounded circle (hidden by default) -->
                                    <Border x:Name="CheckMark"
                                            Width="24" Height="24"
                                            CornerRadius="12"
                                            Background="#EAB308"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,8,8,0"
                                            Opacity="0">
                                        <fa:PackIconFontAwesome Kind="CheckSolid"
                                                                Width="14" Height="14"
                                                                Foreground="White"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CardBorder" Property="BorderBrush" Value="#EAB308"/>
                                    <Setter TargetName="CardBorder" Property="Background" Value="#1A1A1A"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-8"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Style 4: Six Pack (6 photos in 3x2 horizontal) -->
                <Button Tag="4"
                        Grid.Column="6"
                        Margin="8"
                        Cursor="Hand"
                        Click="StyleButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="CardBorder"
                                    Background="#141414"
                                    CornerRadius="12"
                                    BorderBrush="#32312E"
                                    BorderThickness="1"
                                    Padding="16">
                                <Grid>
                                    <!-- Main content -->
                                    <StackPanel>
                                        <Border Background="#0F0F0F"
                                                CornerRadius="16"
                                                Padding="16"
                                                MaxHeight="240"
                                                Margin="0,0,0,16">
                                            <Viewbox Stretch="Uniform">
                                                <!-- 6 photos in 3x2 grid (horizontal) -->
                                                <Grid Width="150" Height="120">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Row="0" Grid.Column="0" CornerRadius="4" Margin="2">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#EAB308" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Grid.Row="0" Grid.Column="1" CornerRadius="4" Margin="2">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#D6AD70" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Grid.Row="0" Grid.Column="2" CornerRadius="4" Margin="2">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#EAB308" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Grid.Row="1" Grid.Column="0" CornerRadius="4" Margin="2">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#D6AD70" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Grid.Row="1" Grid.Column="1" CornerRadius="4" Margin="2">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#EAB308" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Grid.Row="1" Grid.Column="2" CornerRadius="4" Margin="2">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="#D6AD70" Opacity="0.4"/>
                                                        </Border.Background>
                                                    </Border>
                                                </Grid>
                                            </Viewbox>
                                        </Border>
                                        
                                        <TextBlock x:Name="TitleText"
                                                  Text="Six Pack"
                                                  FontFamily="Cormorant Garamond"
                                                  FontSize="18"
                                                  FontWeight="SemiBold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,6"/>
                                        <TextBlock Text="6 Frames · Horizontal"
                                                  FontSize="14"
                                                  FontWeight="Normal"
                                                  Foreground="#808080"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Checkmark overlay in top-right -->
                                    <Border x:Name="CheckMark"
                                            Width="24" Height="24"
                                            CornerRadius="12"
                                            Background="#EAB308"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,8,8,0"
                                            Opacity="0">
                                        <fa:PackIconFontAwesome Kind="CheckSolid"
                                                               Width="14" Height="14"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CardBorder" Property="BorderBrush" Value="#EAB308"/>
                                    <Setter TargetName="CardBorder" Property="Background" Value="#1A1A1A"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-8"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Style 5: Double Column (grid8 - 4 photos duplicated: 4 left, 4 right) - HIDDEN -->
                <Button Tag="5"
                        Grid.Column="8"
                        Visibility="Collapsed"
                        Margin="8"
                        Cursor="Hand"
                        Click="StyleButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="CardBorder"
                                    Background="#141414"
                                    CornerRadius="12"
                                    BorderBrush="#32312E"
                                    BorderThickness="1"
                                    Padding="16">
                                <Grid>
                                    <StackPanel>
                                        <Border Background="#0F0F0F"
                                                CornerRadius="12"
                                                Padding="16"
                                                MaxHeight="240"
                                                Margin="0,0,0,16">
                                            <Viewbox Stretch="Uniform">
                                                <!-- 4 photos duplicated: 4 on left, same 4 on right -->
                                                <Grid Width="120" Height="200">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <!-- Left column: 4 images stacked -->
                                                    <StackPanel Grid.Column="0" Margin="0,0,2,0">
                                                        <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="#EAB308" Opacity="0.4"/>
                                                            </Border.Background>
                                                        </Border>
                                                        <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="#D6AD70" Opacity="0.4"/>
                                                            </Border.Background>
                                                        </Border>
                                                        <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="#EAB308" Opacity="0.4"/>
                                                            </Border.Background>
                                                        </Border>
                                                        <Border Height="45" CornerRadius="4">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="#D6AD70" Opacity="0.4"/>
                                                            </Border.Background>
                                                        </Border>
                                                    </StackPanel>
                                                    <!-- Right column: Same 4 images duplicated -->
                                                    <StackPanel Grid.Column="1" Margin="2,0,0,0">
                                                        <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="#EAB308" Opacity="0.4"/>
                                                            </Border.Background>
                                                        </Border>
                                                        <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="#D6AD70" Opacity="0.4"/>
                                                            </Border.Background>
                                                        </Border>
                                                        <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="#EAB308" Opacity="0.4"/>
                                                            </Border.Background>
                                                        </Border>
                                                        <Border Height="45" CornerRadius="4">
                                                            <Border.Background>
                                                                <SolidColorBrush Color="#D6AD70" Opacity="0.4"/>
                                                            </Border.Background>
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </Viewbox>
                                        </Border>
                                        
                                        <TextBlock x:Name="TitleText"
                                                  Text="Double Column"
                                                  FontFamily="Cormorant Garamond"
                                                  FontSize="18"
                                                  FontWeight="SemiBold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,6"/>
                                        <TextBlock Text="4 Frames · Duplicated"
                                                  FontSize="14"
                                                  FontWeight="Normal"
                                                  Foreground="#808080"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Checkmark in rounded circle (hidden by default) -->
                                    <Border x:Name="CheckMark"
                                            Width="24" Height="24"
                                            CornerRadius="12"
                                            Background="#EAB308"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,8,8,0"
                                            Opacity="0">
                                        <fa:PackIconFontAwesome Kind="CheckSolid"
                                                                Width="14" Height="14"
                                                                Foreground="White"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CardBorder" Property="BorderBrush" Value="#EAB308"/>
                                    <Setter TargetName="CardBorder" Property="Background" Value="#1A1A1A"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-8"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                </Grid>
            </Border>

            <!-- Bottom Action Button -->
            <Grid Grid.Row="3" Margin="0,40,0,40">
                <Button Name="StartSnapButton"
                        Width="280"
                        Height="60"
                        Cursor="Hand"
                        Click="StartSnapButton_Click"
                        HorizontalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder"
                                    CornerRadius="30"
                                    BorderThickness="0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#EAB308" Offset="0"/>
                                        <GradientStop Color="#D6AD70" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#EAB308" BlurRadius="35" ShadowDepth="0" Opacity="0.5"/>
                                </Border.Effect>
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" 
                                      Width="280" Height="60" 
                                      UseLayoutRounding="True"
                                      SnapsToDevicePixels="True">
                                    <!-- Normal Content -->
                                    <StackPanel x:Name="NormalContent"
                                              Orientation="Horizontal"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              UseLayoutRounding="True">
                                        <fa:PackIconFontAwesome Kind="CameraSolid"
                                                               Width="24" Height="24"
                                                               Foreground="#0A0A0A"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"/>
                                        <TextBlock Text="Start Snap"
                                                  FontFamily="Cormorant Garamond"
                                                  FontSize="20"
                                                  FontWeight="SemiBold"
                                                  Foreground="#0A0A0A"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>
                                        <fa:PackIconFontAwesome Kind="ArrowRightSolid"
                                                               Width="24" Height="24"
                                                               Foreground="#0A0A0A"
                                                               VerticalAlignment="Center"/>
                                        <!-- Hidden Badge for dynamic updates -->
                                        <Border x:Name="PhotoCountBadge" Width="24" Height="24"
                                                CornerRadius="12"
                                                Background="White"
                                                VerticalAlignment="Center"
                                                Visibility="Collapsed">
                                            <TextBlock Text="2"
                                                      FontSize="14"
                                                      FontWeight="Bold"
                                                      Foreground="#EAB308"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                    <!-- Loading Content - Text only, no loader -->
                                    <TextBlock x:Name="LoadingContent"
                                              Text="Processing..."
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#EAB308" BlurRadius="50" ShadowDepth="0" Opacity="0.7"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="VerticalContentAlignment" Value="Top"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
