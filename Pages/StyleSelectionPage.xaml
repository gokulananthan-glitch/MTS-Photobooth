<Page x:Class="PhotoBooth.Pages.StyleSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:fa="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Style Selection">
    
    <Grid>
        <!-- Background matching Stitch design -->
        <Grid.Background>
            <SolidColorBrush Color="#221017"/>
        </Grid.Background>

        <!-- Ambient Background Glows -->
        <Canvas ClipToBounds="False">
            <!-- Top Left Glow -->
            <Ellipse Width="1000" Height="1000" 
                     Canvas.Left="-300" Canvas.Top="-200"
                     Opacity="0.2">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#f4257b" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="120"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Bottom Right Glow -->
            <Ellipse Width="1200" Height="1200"
                     Canvas.Right="-400" Canvas.Bottom="-400"
                     Opacity="0.1">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#a855f7" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="150"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Back Button and Logo -->
            <Grid Grid.Row="0" Margin="20,20,20,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                        Name="BackButton"
                        Cursor="Hand"
                        Click="BackButton_Click"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0">
                    <StackPanel Orientation="Horizontal">
                        <fa:PackIconFontAwesome Kind="ArrowLeftSolid"
                                                Width="20" Height="20"
                                                Foreground="White"
                                                VerticalAlignment="Center"
                                                Margin="0,0,8,0"/>
                        <TextBlock Text="Back to Start" 
                                  FontSize="16" 
                                  FontWeight="Medium"
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Logo/Brand Center -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <fa:PackIconFontAwesome Kind="CameraSolid"
                                           Width="20" Height="20"
                                           Foreground="#f4257b"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="MemoraBooth"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Heading Section -->
            <StackPanel Grid.Row="1" 
                       Name="TitleSection"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,60"
                       Opacity="0">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="Pick Your Vibe"
                              FontSize="64"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <fa:PackIconFontAwesome Kind="StarSolid"
                                           Width="24" Height="24"
                                           Foreground="#f4257b"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                    <fa:PackIconFontAwesome Kind="StarSolid"
                                           Width="24" Height="24"
                                           Foreground="#fbbf24"
                                           VerticalAlignment="Center"
                                           Margin="4,0,0,0"/>
                </StackPanel>
                
                <TextBlock Text="Choose a layout style to get the party started!"
                          FontSize="18"
                          FontWeight="Medium"
                          Foreground="#99FFFFFF"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"
                          Margin="0,15,0,0"/>
            </StackPanel>

            <!-- Layout Cards Grid -->
            <Border Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="20,0">
                <Grid Name="StyleButtonsGrid"
                      Opacity="0"
                      HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                
                <!-- Style 1: Solo Shot -->
                <Button Tag="1"
                        Grid.Column="0"
                        Margin="8"
                        Cursor="Hand"
                        Click="StyleButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="CardBorder"
                                    Background="#1AFFFFFF"
                                    CornerRadius="20"
                                    BorderBrush="#33FFFFFF"
                                    BorderThickness="1"
                                    Padding="16">
                                <StackPanel>
                                    <!-- Checkmark (Hidden by default) -->
                                    <fa:PackIconFontAwesome x:Name="CheckMark"
                                                           Kind="CheckSolid"
                                                           Width="20" Height="20"
                                                           Foreground="#f4257b"
                                                           HorizontalAlignment="Right"
                                                           Margin="0,0,10,-20"
                                                           Opacity="0"/>
                                    
                                    <!-- Layout Preview Box -->
                                    <Border Background="#1a0c12"
                                            CornerRadius="16"
                                            Padding="16"
                                            MaxHeight="240"
                                            Margin="0,0,0,16">
                                        <Viewbox Stretch="Uniform">
                                            <!-- Single photo preview -->
                                            <Border Width="120" Height="160"
                                                    CornerRadius="12">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#6366f1" Offset="0"/>
                                                        <GradientStop Color="#ec4899" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>
                                        </Viewbox>
                                    </Border>
                                    
                                    <!-- Title & Description -->
                                    <TextBlock Text="Solo Shot"
                                              FontSize="20"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="1 Frame • Classic"
                                              FontSize="13"
                                              FontWeight="Medium"
                                              Foreground="#80FFFFFF"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CardBorder" Property="BorderBrush" Value="#80f4257b"/>
                                    <Setter TargetName="CardBorder" Property="Background" Value="#15f4257b"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-4"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="VerticalContentAlignment" Value="Top"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Style 2: Dynamic Duo (Selected by default) -->
                <Button Tag="2"
                        Grid.Column="1"
                        Name="Style2Button"
                        Margin="8"
                        Cursor="Hand"
                        Click="StyleButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="CardBorder"
                                    Background="#1AFFFFFF"
                                    CornerRadius="20"
                                    BorderBrush="#33FFFFFF"
                                    BorderThickness="1"
                                    Padding="16">
                                <StackPanel>
                                    <fa:PackIconFontAwesome x:Name="CheckMark"
                                                           Kind="CheckSolid"
                                                           Width="20" Height="20"
                                                           Foreground="#f4257b"
                                                           HorizontalAlignment="Right"
                                                           Margin="0,0,10,-20"
                                                           Opacity="0"/>
                                    
                                    <Border Background="#1a0c12"
                                            CornerRadius="16"
                                            Padding="16"
                                            MaxHeight="240"
                                            Margin="0,0,0,16">
                                        <Viewbox Stretch="Uniform">
                                            <!-- 2 photos stacked vertically -->
                                            <StackPanel Width="100" Height="200">
                                                <Border Height="90" CornerRadius="8" Margin="0,0,0,8">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#6366f1" Offset="0"/>
                                                            <GradientStop Color="#8b5cf6" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <Border Height="90" CornerRadius="8">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#ec4899" Offset="0"/>
                                                            <GradientStop Color="#f43f5e" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                            </StackPanel>
                                        </Viewbox>
                                    </Border>
                                    
                                    <TextBlock Text="Dynamic Duo"
                                              FontSize="22"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,6"/>
                                    <TextBlock Text="2 Frames • Vertical"
                                              FontSize="14"
                                              FontWeight="Medium"
                                              Foreground="#80FFFFFF"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CardBorder" Property="BorderBrush" Value="#f4257b"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-4"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Style 3: Quad Grid (4 photos in 2x2) -->
                <Button Tag="3"
                        Grid.Column="2"
                        Margin="8"
                        Cursor="Hand"
                        Click="StyleButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="CardBorder"
                                    Background="#1AFFFFFF"
                                    CornerRadius="20"
                                    BorderBrush="#33FFFFFF"
                                    BorderThickness="1"
                                    Padding="16">
                                <StackPanel>
                                    <fa:PackIconFontAwesome x:Name="CheckMark"
                                                           Kind="CheckSolid"
                                                           Width="20" Height="20"
                                                           Foreground="#f4257b"
                                                           HorizontalAlignment="Right"
                                                           Margin="0,0,10,-20"
                                                           Opacity="0"/>
                                    
                                    <Border Background="#1a0c12"
                                            CornerRadius="16"
                                            Padding="16"
                                            MaxHeight="240"
                                            Margin="0,0,0,16">
                                        <Viewbox Stretch="Uniform">
                                            <!-- 4 photos in 2x2 grid -->
                                            <Grid Width="120" Height="160">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Row="0" Grid.Column="0" CornerRadius="6" Margin="3">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#6366f1" Offset="0"/>
                                                            <GradientStop Color="#8b5cf6" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <Border Grid.Row="0" Grid.Column="1" CornerRadius="6" Margin="3">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#ec4899" Offset="0"/>
                                                            <GradientStop Color="#f43f5e" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <Border Grid.Row="1" Grid.Column="0" CornerRadius="6" Margin="3">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#ec4899" Offset="0"/>
                                                            <GradientStop Color="#f43f5e" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <Border Grid.Row="1" Grid.Column="1" CornerRadius="6" Margin="3">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#6366f1" Offset="0"/>
                                                            <GradientStop Color="#8b5cf6" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                            </Grid>
                                        </Viewbox>
                                    </Border>
                                    
                                    <TextBlock Text="Quad Grid"
                                              FontSize="22"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,6"/>
                                    <TextBlock Text="4 Frames • Grid"
                                              FontSize="14"
                                              FontWeight="Medium"
                                              Foreground="#80FFFFFF"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CardBorder" Property="BorderBrush" Value="#80f4257b"/>
                                    <Setter TargetName="CardBorder" Property="Background" Value="#15f4257b"/>
                                    <Setter TargetName="CheckMark" Property="Opacity" Value="1"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-4"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Style 4: Six Pack (6 photos in 3x2 horizontal) -->
                <Button Tag="4"
                        Grid.Column="3"
                        Margin="8"
                        Cursor="Hand"
                        Click="StyleButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="CardBorder"
                                    Background="#1AFFFFFF"
                                    CornerRadius="20"
                                    BorderBrush="#33FFFFFF"
                                    BorderThickness="1"
                                    Padding="16">
                                <StackPanel>
                                    <fa:PackIconFontAwesome x:Name="CheckMark"
                                                           Kind="CheckSolid"
                                                           Width="20" Height="20"
                                                           Foreground="#f4257b"
                                                           HorizontalAlignment="Right"
                                                           Margin="0,0,10,-20"
                                                           Opacity="0"/>
                                    
                                    <Border Background="#1a0c12"
                                            CornerRadius="16"
                                            Padding="16"
                                            MaxHeight="240"
                                            Margin="0,0,0,16">
                                        <Viewbox Stretch="Uniform">
                                            <!-- 6 photos in 3x2 grid (horizontal) -->
                                            <Grid Width="150" Height="120">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Row="0" Grid.Column="0" CornerRadius="4" Margin="2">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#6366f1" Offset="0"/>
                                                            <GradientStop Color="#8b5cf6" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <Border Grid.Row="0" Grid.Column="1" CornerRadius="4" Margin="2">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#ec4899" Offset="0"/>
                                                            <GradientStop Color="#f43f5e" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <Border Grid.Row="0" Grid.Column="2" CornerRadius="4" Margin="2">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#6366f1" Offset="0"/>
                                                            <GradientStop Color="#8b5cf6" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <Border Grid.Row="1" Grid.Column="0" CornerRadius="4" Margin="2">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#ec4899" Offset="0"/>
                                                            <GradientStop Color="#f43f5e" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <Border Grid.Row="1" Grid.Column="1" CornerRadius="4" Margin="2">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#6366f1" Offset="0"/>
                                                            <GradientStop Color="#8b5cf6" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <Border Grid.Row="1" Grid.Column="2" CornerRadius="4" Margin="2">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#ec4899" Offset="0"/>
                                                            <GradientStop Color="#f43f5e" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                            </Grid>
                                        </Viewbox>
                                    </Border>
                                    
                                    <TextBlock Text="Six Pack"
                                              FontSize="22"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,6"/>
                                    <TextBlock Text="6 Frames • Horizontal"
                                              FontSize="14"
                                              FontWeight="Medium"
                                              Foreground="#80FFFFFF"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CardBorder" Property="BorderBrush" Value="#80f4257b"/>
                                    <Setter TargetName="CardBorder" Property="Background" Value="#15f4257b"/>
                                    <Setter TargetName="CheckMark" Property="Opacity" Value="1"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-4"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Style 5: Double Column (grid8 - 4 photos duplicated: 4 left, 4 right) -->
                <Button Tag="5"
                        Grid.Column="4"
                        Margin="8"
                        Cursor="Hand"
                        Click="StyleButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="CardBorder"
                                    Background="#1AFFFFFF"
                                    CornerRadius="20"
                                    BorderBrush="#33FFFFFF"
                                    BorderThickness="1"
                                    Padding="16">
                                <StackPanel>
                                    <fa:PackIconFontAwesome x:Name="CheckMark"
                                                           Kind="CheckSolid"
                                                           Width="20" Height="20"
                                                           Foreground="#f4257b"
                                                           HorizontalAlignment="Right"
                                                           Margin="0,0,10,-20"
                                                           Opacity="0"/>
                                    
                                    <Border Background="#1a0c12"
                                            CornerRadius="16"
                                            Padding="16"
                                            MaxHeight="240"
                                            Margin="0,0,0,16">
                                        <Viewbox Stretch="Uniform">
                                            <!-- 4 photos duplicated: 4 on left, same 4 on right -->
                                            <Grid Width="120" Height="200">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <!-- Left column: 4 images stacked -->
                                                <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                                    <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#6366f1" Offset="0"/>
                                                                <GradientStop Color="#8b5cf6" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#ec4899" Offset="0"/>
                                                                <GradientStop Color="#f43f5e" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#6366f1" Offset="0"/>
                                                                <GradientStop Color="#8b5cf6" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Height="45" CornerRadius="4">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#ec4899" Offset="0"/>
                                                                <GradientStop Color="#f43f5e" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                </StackPanel>
                                                <!-- Right column: Same 4 images duplicated (same colors as left) -->
                                                <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                                    <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#6366f1" Offset="0"/>
                                                                <GradientStop Color="#8b5cf6" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#ec4899" Offset="0"/>
                                                                <GradientStop Color="#f43f5e" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Height="45" CornerRadius="4" Margin="0,0,0,4">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#6366f1" Offset="0"/>
                                                                <GradientStop Color="#8b5cf6" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                    <Border Height="45" CornerRadius="4">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#ec4899" Offset="0"/>
                                                                <GradientStop Color="#f43f5e" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </Viewbox>
                                    </Border>
                                    
                                    <TextBlock Text="Double Column"
                                              FontSize="22"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,6"/>
                                    <TextBlock Text="4 Frames • Duplicated"
                                              FontSize="14"
                                              FontWeight="Medium"
                                              Foreground="#80FFFFFF"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CardBorder" Property="BorderBrush" Value="#80f4257b"/>
                                    <Setter TargetName="CardBorder" Property="Background" Value="#15f4257b"/>
                                    <Setter TargetName="CheckMark" Property="Opacity" Value="1"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <TranslateTransform Y="-4"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                </Grid>
            </Border>

            <!-- Bottom Action Button -->
            <Grid Grid.Row="3" Margin="0,40,0,40">
                <Button Name="StartSnapButton"
                        Width="280"
                        Height="60"
                        Cursor="Hand"
                        Click="StartSnapButton_Click"
                        HorizontalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder"
                                    Background="#f62585"
                                    CornerRadius="30"
                                    BorderThickness="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#f62585" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                                </Border.Effect>
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" 
                                      Width="280" Height="60" 
                                      UseLayoutRounding="True"
                                      SnapsToDevicePixels="True">
                                    <!-- Normal Content -->
                                    <StackPanel x:Name="NormalContent"
                                              Orientation="Horizontal"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              UseLayoutRounding="True">
                                        <fa:PackIconFontAwesome Kind="CameraSolid"
                                                               Width="20" Height="20"
                                                               Foreground="White"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"/>
                                        <TextBlock Text="Start Snap"
                                                  FontSize="18"
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>
                                        <Border Width="24" Height="24"
                                                CornerRadius="12"
                                                Background="White"
                                                VerticalAlignment="Center">
                                            <TextBlock x:Name="PhotoCountBadge"
                                                      Text="2"
                                                      FontSize="14"
                                                      FontWeight="Bold"
                                                      Foreground="#f62585"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                    <!-- Loading Content - Text only, no loader -->
                                    <TextBlock x:Name="LoadingContent"
                                              Text="Processing..."
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#f4257b"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="VerticalContentAlignment" Value="Top"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
