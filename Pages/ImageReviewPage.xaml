<Page x:Class="PhotoBooth.Pages.ImageReviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:fa="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Review Images">
    
    <Grid>
        <!-- Background -->
        <Grid.Background>
            <SolidColorBrush Color="#221017"/>
        </Grid.Background>
        
        <!-- Ambient Background Glows -->
        <Canvas ClipToBounds="False">
            <!-- Top Left Glow -->
            <Ellipse Width="1000" Height="1000" 
                     Canvas.Left="-300" Canvas.Top="-200"
                     Opacity="0.2">
            <Ellipse.Fill>
                <RadialGradientBrush>
                        <GradientStop Color="#f4257b" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="120"/>
                </Ellipse.Effect>
        </Ellipse>
        
            <!-- Bottom Right Glow -->
            <Ellipse Width="1200" Height="1200"
                     Canvas.Right="-400" Canvas.Bottom="-400"
                     Opacity="0.1">
            <Ellipse.Fill>
                <RadialGradientBrush>
                        <GradientStop Color="#a855f7" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="150"/>
                </Ellipse.Effect>
        </Ellipse>
        </Canvas>

        <Grid Margin="40,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Navigation -->
            <Grid Grid.Row="0" Margin="0,20,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Brand/Title - Left -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="32" Height="32"
                            CornerRadius="16"
                            Background="#f4257b"
                            Margin="0,0,8,0">
                        <fa:PackIconFontAwesome Kind="CameraSolid"
                                               Width="18" Height="18"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Vibe Check"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,4,0"/>
                    <fa:PackIconFontAwesome Kind="StarSolid"
                                           Width="16" Height="16"
                                           Foreground="#fbbf24"
                                           VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Progress Badge and Close - Right -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Snap Badge -->
                    <Border Background="#EF4444"
                            CornerRadius="16"
                            Padding="12,6"
                            Margin="0,0,12,0">
                        <TextBlock Name="ProgressText"
                                  Text="Snap 3 of 4"
                                  FontSize="12"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                    </Border>
                    <!-- Close Button -->
                    <Button Name="CloseButton"
                            Width="32" Height="32"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            Background="Transparent"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#1AFFFFFF"
                                        CornerRadius="16"
                                        Width="32" Height="32">
                                    <TextBlock Text="✕"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content: Large Photo Preview -->
            <Grid Grid.Row="1"
                  Name="PreviewContainer"
                  Margin="50,0">
                <!-- Main Preview Image with Glassy Border -->
                <Border HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        CornerRadius="0"
                        ClipToBounds="False">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#AAFFFFFF" Offset="0"/>
                            <GradientStop Color="#88FFFFFF" Offset="0.5"/>
                            <GradientStop Color="#AAFFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>3</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                    <!-- Inner glassy border -->
                    <Border CornerRadius="0"
                            BorderBrush="#66FFFFFF"
                            BorderThickness="1"
                            Margin="3"
                            ClipToBounds="True">
                        <Border.Effect>
                            <DropShadowEffect Color="#FFFFFF" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <Image Name="SelectedImage"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </Border>
            </Grid>

            <!-- Primary Action Buttons -->
            <Grid Grid.Row="2" Margin="0,40,0,30" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Retake Button -->
                <Button Grid.Column="0"
                        Name="RetakeButton"
                        Width="180"
                        Height="70"
                        Cursor="Hand"
                        Click="RetakeButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#2a2a2a"
                                    CornerRadius="35"
                                    BorderBrush="#33FFFFFF"
                                    BorderThickness="1">
                                <StackPanel Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock Text="↶"
                                              FontSize="20"
                                              Foreground="White"
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"/>
                                    <TextBlock Text="RETAKE"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Keep Button (Primary) -->
                <Button Grid.Column="2"
                        Name="KeepButton"
                        Width="250"
                        Height="80"
                        Cursor="Hand"
                        Click="ContinueButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#f4257b"
                                    CornerRadius="40">
                                <Border.Effect>
                                    <DropShadowEffect Color="#f4257b" BlurRadius="30" ShadowDepth="0" Opacity="0.6"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock Text="KEEP IT"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              VerticalAlignment="Center"/>
                                    <fa:PackIconFontAwesome Kind="HeartSolid"
                                                           Width="16" Height="16"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"
                                                           Margin="4,0,0,0"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Next Button -->
                <Button Grid.Column="4"
                        Name="NextButton"
                        Width="180"
                        Height="70"
                        Cursor="Hand"
                        Click="ContinueButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#2a2a2a"
                                    CornerRadius="35"
                                    BorderBrush="#33FFFFFF"
                                    BorderThickness="1">
                                <StackPanel Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock Text="NEXT"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"/>
                                    <fa:PackIconFontAwesome Kind="ArrowRightSolid"
                                                           Width="18" Height="18"
                                                           Foreground="White"
                                                           VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Thumbnail Carousel -->
            <Border Grid.Row="3"
                    Background="#12000000"
                    CornerRadius="20"
                    Padding="12"
                    HorizontalAlignment="Center"
                    MaxWidth="1000"
                    BorderBrush="#1AFFFFFF"
                    BorderThickness="1"
                    Margin="0,0,0,30">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Disabled">
                    <ScrollViewer.Template>
                        <ControlTemplate TargetType="ScrollViewer">
                            <ScrollContentPresenter/>
                        </ControlTemplate>
                    </ScrollViewer.Template>
                    
                    <StackPanel Name="ThumbnailsPanel"
                               Orientation="Horizontal"
                               Margin="0"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
