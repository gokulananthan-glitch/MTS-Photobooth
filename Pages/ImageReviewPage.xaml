<Page x:Class="PhotoBooth.Pages.ImageReviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:fa="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Review Images">
    
    <Grid>
        <!-- Background -->
        <Grid.Background>
            <SolidColorBrush Color="#0a0a0a"/>
        </Grid.Background>

        <Grid Margin="40,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Navigation -->
            <Grid Grid.Row="0" Margin="0,20,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Brand/Title - Left -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Vibe Check"
                              FontFamily="Cormorant Garamond"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#F8F5F0"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Progress Badge and Close - Right -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Snap Badge - Golden -->
                    <Border CornerRadius="16"
                            Padding="12,6"
                            Margin="0,0,12,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F5E54C" Offset="0"/>
                                <GradientStop Color="#D6950F" Offset="0.5"/>
                                <GradientStop Color="#EAB308" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Name="ProgressText"
                                  Text="Snap 3 of 4"
                                  FontSize="12"
                                  FontWeight="Bold"
                                  Foreground="#0A0A0A"
                                  VerticalAlignment="Center"/>
                    </Border>
                    <!-- Close Button -->
                    <Button Name="CloseButton"
                            Width="32" Height="32"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            Background="Transparent"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#801F1F1F"
                                        CornerRadius="16"
                                        Width="32" Height="32">
                                    <TextBlock Text="✕"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="#F8F5F0"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content: Large Photo Preview -->
            <Grid Grid.Row="1"
                  Name="PreviewContainer"
                  Margin="50,0">
                <!-- Main Preview Image with Glassy Border -->
                <Border HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        CornerRadius="0"
                        ClipToBounds="False">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#AAFFFFFF" Offset="0"/>
                            <GradientStop Color="#88FFFFFF" Offset="0.5"/>
                            <GradientStop Color="#AAFFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>3</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                    <!-- Inner glassy border -->
                    <Border CornerRadius="0"
                            BorderBrush="#66FFFFFF"
                            BorderThickness="1"
                            Margin="3"
                            ClipToBounds="True">
                        <Border.Effect>
                            <DropShadowEffect Color="#FFFFFF" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <Image Name="SelectedImage"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </Border>
            </Grid>

            <!-- Primary Action Buttons -->
            <Grid Grid.Row="2" Margin="0,40,0,30" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Retake Button -->
                <Button Grid.Column="0"
                        Name="RetakeButton"
                        Width="180"
                        Height="70"
                        Cursor="Hand"
                        Click="RetakeButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#801F1F1F"
                                    CornerRadius="35">
                                <StackPanel Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock Text="↶"
                                              FontSize="20"
                                              Foreground="#F8F5F0"
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"/>
                                    <TextBlock Text="RETAKE"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#F8F5F0"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Keep Button (Primary) - Golden Gradient -->
                <Button Grid.Column="2"
                        Name="KeepButton"
                        Width="250"
                        Height="80"
                        Cursor="Hand"
                        Click="ContinueButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="40">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#EAB308" Offset="0"/>
                                        <GradientStop Color="#D6AD70" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#EAB308" BlurRadius="30" ShadowDepth="0" Opacity="0.6"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock Text="KEEP IT"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              VerticalAlignment="Center"
                                              Margin="0,0,8,0"/>
                                    <TextBlock Text="♥"
                                              FontSize="20"
                                              Foreground="White"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Next Button -->
                <Button Grid.Column="4"
                        Name="NextButton"
                        Width="180"
                        Height="70"
                        Cursor="Hand"
                        Click="ContinueButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#801F1F1F"
                                    CornerRadius="35">
                                <StackPanel Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock Text="NEXT"
                                              FontSize="14"
                                              FontWeight="Bold"
                                              Foreground="#F8F5F0"
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"/>
                                    <TextBlock Text="→"
                                              FontSize="20"
                                              Foreground="#F8F5F0"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Thumbnail Carousel -->
            <Border Grid.Row="3"
                    Background="#12000000"
                    CornerRadius="20"
                    Padding="12"
                    HorizontalAlignment="Center"
                    MaxWidth="1000"
                    BorderBrush="#1AFFFFFF"
                    BorderThickness="1"
                    Margin="0,0,0,30">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Disabled">
                    <ScrollViewer.Template>
                        <ControlTemplate TargetType="ScrollViewer">
                            <ScrollContentPresenter/>
                        </ControlTemplate>
                    </ScrollViewer.Template>
                    
                    <StackPanel Name="ThumbnailsPanel"
                               Orientation="Horizontal"
                               Margin="0"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
