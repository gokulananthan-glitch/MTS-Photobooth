<Page x:Class="PhotoBooth.Pages.CapturePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:fa="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Capture Page">
    
    <Grid>
        <!-- Background -->
        <Grid.Background>
            <SolidColorBrush Color="#0a0a0a"/>
        </Grid.Background>

        <!-- Flash Overlay -->
        <Border Name="FlashOverlay"
                Background="White"
                Visibility="Collapsed"
                Panel.ZIndex="1000"
                IsHitTestVisible="False"/>

        <Grid Margin="40,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="20,20,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                        Name="BackButton"
                        Height="40"
                        Padding="16,0"
                        Cursor="Hand"
                        Click="BackButton_Click"
                        Background="Transparent"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#1A1A1A"
                                    CornerRadius="20"
                                    BorderBrush="#26FFFFFF"
                                    BorderThickness="1"
                                    Padding="16,0"
                                    Height="40">
                                <TextBlock Text="â† Back"
                                          FontSize="15"
                                          FontWeight="Normal"
                                          Foreground="#F8F5F0"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Brand/Logo -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    <fa:PackIconFontAwesome Kind="StarSolid"
                                           Width="18" Height="18"
                                           Foreground="#EAB308"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="Get Ready"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#F8F5F0"
                              VerticalAlignment="Center"/>
                    <fa:PackIconFontAwesome Kind="StarSolid"
                                           Width="16" Height="16"
                                           Foreground="#D6AD70"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"
                                           Opacity="0.8"/>
                </StackPanel>

                <!-- Reset Button -->
                <Button Grid.Column="2"
                        Name="ResetButton"
                        Height="40"
                        Padding="16,0"
                        Cursor="Hand"
                        Click="ResetButton_Click"
                        Background="Transparent"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#1A1A1A"
                                    CornerRadius="20"
                                    BorderBrush="#26FFFFFF"
                                    BorderThickness="1"
                                    Padding="16,0"
                                    Height="40">
                                <TextBlock Text="Start Over"
                                          FontSize="15"
                                          FontWeight="Normal"
                                          Foreground="#F8F5F0"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Main Title: "Serve a pose! ðŸ“·" -->
            <StackPanel Grid.Row="1" 
                       Name="TitleSection"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,24">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="Serve a pose! "
                              FontFamily="Cormorant Garamond"
                              FontSize="48"
                              FontWeight="Bold"
                              Foreground="#F8F5F0"
                              VerticalAlignment="Center"
                              Opacity="0">
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="20"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                        From="0" To="1"
                                                        Duration="0:0:0.8"
                                                        BeginTime="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="20" To="0"
                                                        Duration="0:0:0.8"
                                                        BeginTime="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <fa:PackIconFontAwesome Kind="CameraSolid"
                                           Width="40" Height="40"
                                           Foreground="#EAB308"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"
                                           Opacity="0">
                        <fa:PackIconFontAwesome.RenderTransform>
                            <TranslateTransform Y="20"/>
                        </fa:PackIconFontAwesome.RenderTransform>
                        <fa:PackIconFontAwesome.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                        From="0" To="1"
                                                        Duration="0:0:0.6"
                                                        BeginTime="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="20" To="0"
                                                        Duration="0:0:0.6"
                                                        BeginTime="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </fa:PackIconFontAwesome.Triggers>
                    </fa:PackIconFontAwesome>
                </StackPanel>
            </StackPanel>

            <!-- Camera Preview (aspect-video = 16:9) -->
            <Viewbox Grid.Row="2" 
                     Margin="100,0"
                     Stretch="Uniform"
                     StretchDirection="Both">
                <Grid Width="1280" Height="720">
                    <Grid ClipToBounds="True">
                        <Border CornerRadius="22">
                            <Grid x:Name="PreviewContainer">
                                <Image Name="PreviewImage" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                
                                <!-- Viewfinder grid overlay -->
                                    <Grid IsHitTestVisible="False">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Vertical lines -->
                                        <Rectangle Grid.Column="1" Grid.RowSpan="3" 
                                                  Width="1" HorizontalAlignment="Left"
                                                  Fill="White" Opacity="0.1"/>
                                        <Rectangle Grid.Column="2" Grid.RowSpan="3" 
                                                  Width="1" HorizontalAlignment="Left"
                                                  Fill="White" Opacity="0.1"/>
                                        
                                        <!-- Horizontal lines -->
                                        <Rectangle Grid.Row="1" Grid.ColumnSpan="3" 
                                                  Height="1" VerticalAlignment="Top"
                                                  Fill="White" Opacity="0.1"/>
                                        <Rectangle Grid.Row="2" Grid.ColumnSpan="3" 
                                                  Height="1" VerticalAlignment="Top"
                                                  Fill="White" Opacity="0.1"/>
                                    </Grid>
                                    
                                    <!-- Corner guides (border-white/30) -->
                                    <Canvas IsHitTestVisible="False">
                                        <!-- Top Left -->
                                        <Border Width="32" Height="32" 
                                                Canvas.Left="16" Canvas.Top="16"
                                                BorderBrush="White" 
                                                BorderThickness="2,2,0,0"
                                                Opacity="0.3"/>
                                        <!-- Top Right -->
                                        <Border Width="32" Height="32" 
                                                Canvas.Right="16" Canvas.Top="16"
                                                BorderBrush="White" 
                                                BorderThickness="0,2,2,0"
                                                Opacity="0.3"/>
                                        <!-- Bottom Left -->
                                        <Border Width="32" Height="32" 
                                                Canvas.Left="16" Canvas.Bottom="16"
                                                BorderBrush="White" 
                                                BorderThickness="2,0,0,2"
                                                Opacity="0.3"/>
                                        <!-- Bottom Right -->
                                        <Border Width="32" Height="32" 
                                                Canvas.Right="16" Canvas.Bottom="16"
                                                BorderBrush="White" 
                                                BorderThickness="0,0,2,2"
                                                Opacity="0.3"/>
                                    </Canvas>

                                    <!-- Shot indicator badge - Top Center -->
                                    <Border HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Margin="0,20,0,0"
                                            CornerRadius="20"
                                            Padding="16,6">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#F5E54C" Offset="0"/>
                                                <GradientStop Color="#D6950F" Offset="0.5"/>
                                                <GradientStop Color="#EAB308" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Name="PhotoCounterText"
                                                  Text="SHOT 1 OF 3"
                                                  FontSize="14"
                                                  FontWeight="Bold"
                                                  Foreground="#0A0A0A"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Countdown overlay with circular ring -->
                                    <Border Name="CountdownOverlay"
                                            Background="#4D000000"
                                            Visibility="Collapsed"
                                            IsHitTestVisible="False">
                                        <Grid HorizontalAlignment="Center" 
                                              VerticalAlignment="Center">
                                            <Canvas Width="320" Height="320">
                                                <!-- Background ring (secondary color) -->
                                                <Ellipse Width="280" Height="280"
                                                        Canvas.Left="20" Canvas.Top="20"
                                                        Stroke="#1F1F1F"
                                                        StrokeThickness="16"
                                                        Fill="Transparent"/>
                                                
                                                <!-- Animated ring (primary golden color) -->
                                                <Ellipse Name="CountdownRing"
                                                        Width="280" Height="280"
                                                        Canvas.Left="20" Canvas.Top="20"
                                                        StrokeThickness="16"
                                                        Fill="Transparent"
                                                        StrokeDashArray="880"
                                                        StrokeDashOffset="880"
                                                        RenderTransformOrigin="0.5,0.5">
                                                    <Ellipse.Stroke>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#F5E54C" Offset="0"/>
                                                            <GradientStop Color="#EAB308" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Ellipse.Stroke>
                                                    <Ellipse.RenderTransform>
                                                        <RotateTransform Angle="-90"/>
                                                    </Ellipse.RenderTransform>
                                                </Ellipse>
                                            </Canvas>
                                            
                                            <!-- Countdown number -->
                                            <TextBlock Name="CountdownText" 
                                                      FontFamily="Cormorant Garamond"
                                                      FontSize="140" 
                                                      FontWeight="Bold"
                                                      Foreground="#EAB308" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      TextAlignment="Center">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Color="#EAB308" 
                                                                    BlurRadius="40" 
                                                                    ShadowDepth="0" 
                                                                    Opacity="0.6"/>
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            
                                            <!-- Camera icon for countdown end (initially hidden) -->
                                            <fa:PackIconFontAwesome Name="CountdownCameraIcon"
                                                                   Kind="CameraSolid"
                                                                   Width="120" Height="120"
                                                                   Foreground="#EAB308"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Visibility="Collapsed">
                                                <fa:PackIconFontAwesome.Effect>
                                                    <DropShadowEffect Color="#EAB308" 
                                                                    BlurRadius="40" 
                                                                    ShadowDepth="0" 
                                                                    Opacity="0.6"/>
                                                </fa:PackIconFontAwesome.Effect>
                                            </fa:PackIconFontAwesome>
                                        </Grid>
                                    </Border>
                                </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Viewbox>

            <!-- Bottom Controls (gap-6 = 24px) -->
            <Grid Grid.Row="3" Margin="0,0,0,32">
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    <!-- Capture/Shutter Button (shutter-button class) -->
                    <Button Name="CaptureButton"
                            Width="72" Height="72"
                            Cursor="Hand"
                            Click="CaptureButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="36"
                                        BorderThickness="0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#EAB308" Offset="0"/>
                                            <GradientStop Color="#D6AD70" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#EAB308" BlurRadius="25" ShadowDepth="0" Opacity="0.6"/>
                                    </Border.Effect>
                                    <fa:PackIconFontAwesome Kind="CameraSolid"
                                                           Width="32" Height="32"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Status Text Overlay (Hidden by default) -->
            <Border Name="StatusBorder"
                   Grid.Row="2"
                   Background="#E0000000"
                   CornerRadius="10"
                   Padding="20,12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,50"
                   Visibility="Collapsed"
                   Panel.ZIndex="10">
                <TextBlock Name="StatusText" 
                          Text="Ready to capture" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="#EAB308"
                          HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#EAB308" 
                                        BlurRadius="10" 
                                        ShadowDepth="0" 
                                        Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Border>
        </Grid>
    </Grid>
</Page>
