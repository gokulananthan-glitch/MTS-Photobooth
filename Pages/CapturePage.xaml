<Page x:Class="PhotoBooth.Pages.CapturePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:fa="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Capture Page">
    
    <Grid>
        <!-- Background -->
        <Grid.Background>
            <SolidColorBrush Color="#221017"/>
        </Grid.Background>
        
        <!-- Ambient Background Glows -->
        <Canvas ClipToBounds="False">
            <!-- Top Left Glow -->
            <Ellipse Width="1000" Height="1000" 
                     Canvas.Left="-300" Canvas.Top="-200"
                     Opacity="0.2">
            <Ellipse.Fill>
                <RadialGradientBrush>
                        <GradientStop Color="#f4257b" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="120"/>
                </Ellipse.Effect>
        </Ellipse>
        
            <!-- Bottom Right Glow -->
            <Ellipse Width="1200" Height="1200"
                     Canvas.Right="-400" Canvas.Bottom="-400"
                     Opacity="0.1">
            <Ellipse.Fill>
                <RadialGradientBrush>
                        <GradientStop Color="#a855f7" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="150"/>
                </Ellipse.Effect>
        </Ellipse>
        </Canvas>

        <Grid Margin="40,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Grid Grid.Row="0" Margin="0,20,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Brand/Title - Left -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="32" Height="32"
                            CornerRadius="16"
                            Background="#f4257b"
                            Margin="0,0,8,0">
                        <fa:PackIconFontAwesome Kind="CameraSolid"
                                               Width="18" Height="18"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="MemoraBooth"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,4,0"/>
                </StackPanel>

                <!-- Back and Settings - Right -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Name="BackButton"
                            Width="40" Height="40"
                            Cursor="Hand"
                            Click="BackButton_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="0,0,8,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#1AFFFFFF"
                                        CornerRadius="20"
                                        BorderBrush="#33FFFFFF"
                                        BorderThickness="1"
                                        Width="40" Height="40">
                                    <fa:PackIconFontAwesome Kind="ArrowLeftSolid"
                                                           Width="18" Height="18"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Instruction -->
            <StackPanel Grid.Row="1" 
                       Name="TitleSection"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,30">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="Serve a pose!"
                              FontSize="48"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                        <fa:PackIconFontAwesome Kind="CameraSolid"
                                               Width="36" Height="36"
                                               Foreground="#f4257b"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Live Preview Area -->
            <Grid Grid.Row="2" Margin="100,0">
                <Border Name="PreviewBorder" 
                        CornerRadius="0"
                        Background="#0a0506"
                        ClipToBounds="False"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MaxWidth="1200"
                        MaxHeight="600">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#AAFFFFFF" Offset="0"/>
                            <GradientStop Color="#88FFFFFF" Offset="0.5"/>
                            <GradientStop Color="#AAFFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>3</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>
                    <!-- Inner glassy border -->
                    <Border CornerRadius="0"
                            BorderBrush="#66FFFFFF"
                            BorderThickness="1"
                            Margin="3"
                            ClipToBounds="True">
                        <Border.Effect>
                            <DropShadowEffect Color="#FFFFFF" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                    
                    <Grid>
                        <!-- Live Camera Feed -->
                        <Image Name="PreviewImage" 
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                        
                        <!-- Grid Overlay (3x3 Rule of Thirds) -->
                        <Grid Opacity="0.3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Vertical lines -->
                            <Rectangle Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Fill="#FFFFFF" Width="1"/>
                            <Rectangle Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Fill="#FFFFFF" Width="1"/>
                            
                            <!-- Horizontal lines -->
                            <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Fill="#FFFFFF" Height="1"/>
                            <Rectangle Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Fill="#FFFFFF" Height="1"/>
                        </Grid>

                        <!-- Shot Badge - Top Center -->
                        <Border HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Margin="0,20,0,0"
                                Background="#8B0000"
                                CornerRadius="16"
                                BorderBrush="White"
                                BorderThickness="2"
                                Padding="16,8">
                            <TextBlock Name="PhotoCounterText"
                                      Text="SHOT 1 OF 3"
                                      FontSize="12"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Status Text Overlay (Hidden by default, shown when needed) -->
                        <Border Name="StatusBorder"
                               Background="#E0000000"
                               CornerRadius="10"
                               Padding="20,12"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,50"
                               Visibility="Collapsed"
                               Panel.ZIndex="10">
                            <TextBlock Name="StatusText" 
                                      Text="Ready to capture" 
                                      FontSize="20" 
                                      FontWeight="Bold"
                                      Foreground="#f4257b"
                                      HorizontalAlignment="Center">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#f4257b" 
                                                    BlurRadius="10" 
                                                    ShadowDepth="0" 
                                                    Opacity="0.8"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </Border>
                    </Grid>
                    </Border>
                </Border>
            </Grid>

            <!-- Bottom Controls -->
            <Grid Grid.Row="3" Margin="0,40,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Gallery Button (Placeholder - can be removed if not needed) -->
                <StackPanel Grid.Column="0" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center">
                    <!-- Empty for now - user said don't add extra buttons -->
                </StackPanel>

                <!-- Center: Capture Button -->
                <Button Grid.Column="1"
                       Name="CaptureButton" 
                       Width="120"
                       Height="120"
                       Cursor="Hand"
                       Click="CaptureButton_Click">
                    <Button.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Button.RenderTransform>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse Fill="#f4257b"
                                                    Stroke="#f4257b"
                                                    StrokeThickness="3">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="#f4257b" 
                                                                    BlurRadius="30" 
                                                                    ShadowDepth="0" 
                                                                    Opacity="0.8"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <fa:PackIconFontAwesome Kind="CameraSolid"
                                           Width="48" Height="48"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                </Button>

                <!-- Right: Timer Display -->
                <StackPanel Grid.Column="2" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <TextBlock Text="⏱️"
                              FontSize="24"
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                    <TextBlock Name="TimerText"
                              Text="TIMER: 3S"
                              FontSize="14"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Countdown Overlay (No Background) -->
            <Border Grid.Row="2" 
                    Name="CountdownOverlay"
                    Background="Transparent"
                    Visibility="Collapsed"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    IsHitTestVisible="False">
                <TextBlock Name="CountdownText" 
                          FontSize="180" 
                          FontWeight="Bold"
                          Foreground="#f4257b" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          TextAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#f4257b" 
                                        BlurRadius="30" 
                                        ShadowDepth="0" 
                                        Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Border>
        </Grid>
    </Grid>
</Page>
