<Page x:Class="PhotoBooth.Pages.PrintPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:fa="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Print Page">
    
    <Grid>
        <!-- Background -->
        <Grid.Background>
            <SolidColorBrush Color="#0a0a0a"/>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Fixed Navbar -->
            <Border Grid.Row="0"
                    Background="#141414"
                    BorderBrush="#32312E"
                    BorderThickness="0,0,0,1"
                    Padding="40,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Brand -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <fa:PackIconFontAwesome Kind="StarSolid"
                                               Width="24" Height="24"
                                               Foreground="#EAB308"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                        <TextBlock Text="MemoraBooth"
                                  FontFamily="Cormorant Garamond"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="#F8F5F0"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Start Over Button -->
                    <Button Grid.Column="2"
                            Name="HomeButton"
                            Height="36"
                            Padding="20,8"
                            Cursor="Hand"
                            Click="HomeButton_Click"
                            Background="Transparent"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#801F1F1F"
                                        CornerRadius="18"
                                        Padding="20,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="â†»"
                                                  FontSize="18"
                                                  Foreground="#F8F5F0"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"/>
                                        <TextBlock Text="Start Over"
                                                  FontSize="14"
                                                  FontWeight="Medium"
                                                  Foreground="#F8F5F0"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="60,40,60,60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MaxWidth="450"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Photo Strip Preview -->
                <Viewbox Grid.Column="0" 
                        StretchDirection="DownOnly"
                        Stretch="Uniform"
                        VerticalAlignment="Center">
                    <Grid Width="340" Height="500">
                        <Border Width="340" Height="500"
                                Background="White"
                                CornerRadius="8"
                                Padding="16,16,16,48">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="50" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <RotateTransform x:Name="PhotoStripRotate" Angle="-2" CenterX="170" CenterY="250"/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PhotoStripRotate"
                                                           Storyboard.TargetProperty="Angle"
                                                           To="0" Duration="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="PhotoStripRotate"
                                                           Storyboard.TargetProperty="Angle"
                                                           To="-2" Duration="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            
                            <Grid>
                                <!-- Photo Grid -->
                                <Image Name="PreviewImage"
                                       Stretch="Uniform"/>
                                
                                <!-- Branding at bottom -->
                                <StackPanel HorizontalAlignment="Center"
                                           VerticalAlignment="Bottom"
                                           Margin="0,0,0,8">
                                    <TextBlock Text="#MEMORABOOTH"
                                              FontSize="11"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <!-- Decorative stickers -->
                            <Border.Clip>
                                <RectangleGeometry Rect="0,0,340,500" RadiusX="8" RadiusY="8"/>
                            </Border.Clip>
                        </Border>
                        
                        <!-- Floating decoration elements -->
                        <Canvas Width="340" Height="500" IsHitTestVisible="False">
                            <!-- Red heart icon top-right -->
                            <fa:PackIconFontAwesome Kind="HeartSolid"
                                                   Width="48" Height="48"
                                                   Foreground="#EF4444"
                                                   Canvas.Right="-20" 
                                                   Canvas.Top="-20">
                                <fa:PackIconFontAwesome.Effect>
                                    <DropShadowEffect Color="#EF4444" BlurRadius="15" ShadowDepth="0" Opacity="0.9"/>
                                </fa:PackIconFontAwesome.Effect>
                            </fa:PackIconFontAwesome>
                            <!-- Two yellow star icons bottom-left -->
                            <fa:PackIconFontAwesome Kind="StarSolid"
                                                   Width="36" Height="36"
                                                   Foreground="#fbbf24"
                                                   Canvas.Left="-15" Canvas.Bottom="20">
                                <fa:PackIconFontAwesome.Effect>
                                    <DropShadowEffect Color="#fbbf24" BlurRadius="12" ShadowDepth="0" Opacity="0.8"/>
                                </fa:PackIconFontAwesome.Effect>
                            </fa:PackIconFontAwesome>
                            <fa:PackIconFontAwesome Kind="StarSolid"
                                                   Width="36" Height="36"
                                                   Foreground="#fbbf24"
                                                   Canvas.Left="-5" Canvas.Bottom="5">
                                <fa:PackIconFontAwesome.Effect>
                                    <DropShadowEffect Color="#fbbf24" BlurRadius="12" ShadowDepth="0" Opacity="0.8"/>
                                </fa:PackIconFontAwesome.Effect>
                            </fa:PackIconFontAwesome>
                        </Canvas>
                    </Grid>
                </Viewbox>

                <!-- Right: Controls -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <!-- Heading -->
                    <StackPanel Margin="0,0,0,40">
                        <TextBlock FontFamily="Cormorant Garamond"
                                  FontSize="64"
                                  FontWeight="Bold"
                                  Foreground="#F8F5F0"
                                  Opacity="0">
                            <TextBlock.RenderTransform>
                                <TranslateTransform Y="20"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                            From="0" To="1"
                                                            Duration="0:0:0.8"
                                                            BeginTime="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                            From="20" To="0"
                                                            Duration="0:0:0.8"
                                                            BeginTime="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                            <Run Text="Looks "/>
                            <Run>
                                <Run.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#EAB308" Offset="0"/>
                                        <GradientStop Color="#D6AD70" Offset="1"/>
                                    </LinearGradientBrush>
                                </Run.Foreground>
                                <Run.Text>fire!</Run.Text>
                            </Run>
                        </TextBlock>
                        <TextBlock Text="Ready to print your masterpiece? Don't forget to grab a digital copy too! ðŸ“¸"
                                  FontSize="16"
                                  Foreground="#808080"
                                  FontWeight="Medium"
                                  TextWrapping="Wrap"
                                  Margin="0,12,0,0"
                                  Opacity="0">
                            <TextBlock.RenderTransform>
                                <TranslateTransform Y="20"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                            From="0" To="1"
                                                            Duration="0:0:0.8"
                                                            BeginTime="0:0:0.5">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                            From="20" To="0"
                                                            Duration="0:0:0.8"
                                                            BeginTime="0:0:0.5">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                    </StackPanel>

                    <!-- Controls Container (Glass Panel) -->
                    <Border Background="#141414"
                            CornerRadius="24"
                            Padding="32"
                            BorderBrush="#32312E"
                            BorderThickness="2">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="0" Opacity="0.35"/>
                        </Border.Effect>
                        
                        <StackPanel>
                            <!-- Quantity Selector -->
                            <Border Name="QuantitySelectorBorder"
                                    Background="#1A1A1A"
                                    CornerRadius="16"
                                    Padding="20"
                                    BorderBrush="#32312E"
                                    BorderThickness="1"
                                    Margin="0,0,0,24">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Left: Icon & Text -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <Border Width="48" Height="48"
                                                CornerRadius="24"
                                                Margin="0,0,16,0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#F5E54C" Offset="0"/>
                                                    <GradientStop Color="#D6950F" Offset="0.5"/>
                                                    <GradientStop Color="#EAB308" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <fa:PackIconFontAwesome Kind="PrintSolid"
                                                                   Width="24" Height="24"
                                                                   Foreground="#0A0A0A"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Copies"
                                                      FontSize="18"
                                                      FontWeight="Bold"
                                                      Foreground="#F8F5F0"/>
                                            <TextBlock Text="How many do you need?"
                                                      FontSize="14"
                                                      Foreground="#808080"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Right: Counter -->
                                    <Border Grid.Column="1"
                                            Background="#1A1A1A"
                                            CornerRadius="24"
                                            Padding="6"
                                            BorderBrush="#32312E"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal">
                                            <Button Name="DecreaseButton"
                                                    Width="40" Height="40"
                                                    Content="âˆ’"
                                                    FontSize="24"
                                                    FontWeight="Bold"
                                                    Foreground="#F8F5F0"
                                                    Cursor="Hand"
                                                    Click="DecreaseButton_Click">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="#801F1F1F"
                                                                CornerRadius="20">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="RenderTransform">
                                                                    <Setter.Value>
                                                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            
                                            <TextBlock Name="QuantityText"
                                                      Text="1"
                                                      FontSize="20"
                                                      FontWeight="Bold"
                                                      Foreground="#F8F5F0"
                                                      VerticalAlignment="Center"
                                                      Width="32"
                                                      TextAlignment="Center"/>
                                            
                                            <Button Name="IncreaseButton"
                                                    Width="40" Height="40"
                                                    Content="+"
                                                    FontSize="24"
                                                    FontWeight="Bold"
                                                    Foreground="#F8F5F0"
                                                    Cursor="Hand"
                                                    Click="IncreaseButton_Click">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="#801F1F1F"
                                                                CornerRadius="20">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="RenderTransform">
                                                                    <Setter.Value>
                                                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Get Digital Copy Section -->
                            <Border Background="#1A1A1A"
                                    CornerRadius="16"
                                    Padding="20"
                                    BorderBrush="#32312E"
                                    BorderThickness="1"
                                    Margin="0,0,0,24"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="DigitalCopyButton_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Left: Icon & Text -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <Border Width="48" Height="48"
                                                CornerRadius="24"
                                                Background="#801F1F1F"
                                                Margin="0,0,16,0">
                                            <TextBlock Text="ðŸ“±"
                                                      FontSize="24"
                                                      Foreground="White"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Get Digital Copy"
                                                      FontSize="18"
                                                      FontWeight="Bold"
                                                      Foreground="#F8F5F0"/>
                                            <TextBlock Text="Scan QR to download instantly"
                                                      FontSize="14"
                                                      Foreground="#808080"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Right: Arrow Icon -->
                                    <TextBlock Grid.Column="1"
                                              Text="â†’"
                                              FontSize="24"
                                              Foreground="#F8F5F0"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Print Button - Golden Gradient -->
                            <Button Name="PrintButton"
                                    Height="72"
                                    Cursor="Hand"
                                    Click="PrintButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="ButtonBorder"
                                                CornerRadius="36">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#EAB308" Offset="0"/>
                                                    <GradientStop Color="#D6AD70" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Border.Effect>
                                                <DropShadowEffect Color="#EAB308" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                                            </Border.Effect>
                                            
                                            <StackPanel Orientation="Horizontal"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center">
                                                <TextBlock Text="PRINT NOW"
                                                          FontSize="20"
                                                          FontWeight="Bold"
                                                          Foreground="White"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,12,0"/>
                                                <fa:PackIconFontAwesome Kind="PrintSolid"
                                                                       Width="20" Height="20"
                                                                       Foreground="White"
                                                                       VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Info text -->
                    <TextBlock Text="Tap screen anywhere else to cancel"
                              FontSize="14"
                              FontWeight="Medium"
                              Foreground="#4DFFFFFF"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"
                              Margin="0,24,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Success Overlay (Hidden by default) -->
        <Border Name="SuccessOverlay"
                Background="#F0000000"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center"
                       HorizontalAlignment="Center">
                <TextBlock Text="âœ“"
                          FontSize="150"
                          Foreground="#4CAF50"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#4CAF50" BlurRadius="40" ShadowDepth="0" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Print Successful!"
                          FontSize="48"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
