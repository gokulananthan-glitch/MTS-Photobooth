<Page x:Class="PhotoBooth.Pages.FilterSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:fa="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:controls="clr-namespace:PhotoBooth.Controls"
      Title="Filter Selection">
    
    <Grid>
        <!-- Background -->
        <Grid.Background>
            <SolidColorBrush Color="#0a0a0a"/>
        </Grid.Background>

        <Grid Margin="40,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="20,20,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                        Name="BackButton"
                        Height="40"
                        Padding="16,0"
                        Cursor="Hand"
                        Click="BackButton_Click"
                        Background="Transparent"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#1A1A1A"
                                    CornerRadius="20"
                                    BorderBrush="#26FFFFFF"
                                    BorderThickness="1"
                                    Padding="16,0"
                                    Height="40">
                                <TextBlock Text="â† Back"
                                          FontSize="15"
                                          FontWeight="Normal"
                                          Foreground="#F8F5F0"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Brand/Logo -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    <fa:PackIconFontAwesome Kind="StarSolid"
                                           Width="18" Height="18"
                                           Foreground="#EAB308"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                    <TextBlock Text="Set the Mood"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#F8F5F0"
                              VerticalAlignment="Center"/>
                    <fa:PackIconFontAwesome Kind="StarSolid"
                                           Width="16" Height="16"
                                           Foreground="#D6AD70"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"
                                           Opacity="0.8"/>
                </StackPanel>

                <!-- Reset Button -->
                <Button Grid.Column="2"
                        Name="ResetButton"
                        Height="40"
                        Padding="16,0"
                        Cursor="Hand"
                        Click="ResetButton_Click"
                        Background="Transparent"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#1A1A1A"
                                    CornerRadius="20"
                                    BorderBrush="#26FFFFFF"
                                    BorderThickness="1"
                                    Padding="16,0"
                                    Height="40">
                                <TextBlock Text="Start Over"
                                          FontSize="15"
                                          FontWeight="Normal"
                                          Foreground="#F8F5F0"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Main Title: "Pick Your Vibe ðŸ–¥ï¸" -->
            <StackPanel Grid.Row="1" 
                       Name="TitleSection"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,24">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="Pick Your Vibe "
                              FontFamily="Cormorant Garamond"
                              FontSize="48"
                              FontWeight="Bold"
                              Foreground="#F8F5F0"
                              VerticalAlignment="Center"
                              Opacity="0">
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="20"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                        From="0" To="1"
                                                        Duration="0:0:0.8"
                                                        BeginTime="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="20" To="0"
                                                        Duration="0:0:0.8"
                                                        BeginTime="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock Text="ðŸ–¥ï¸"
                              FontSize="48"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Opacity="0">
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="20"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                        From="0" To="1"
                                                        Duration="0:0:0.8"
                                                        BeginTime="0:0:0.6">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                        From="20" To="0"
                                                        Duration="0:0:0.8"
                                                        BeginTime="0:0:0.6">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Camera Preview (aspect-video = 16:9) -->
            <Viewbox Grid.Row="2" 
                     Margin="100,0"
                     Stretch="Uniform"
                     StretchDirection="Both">
                <Grid Width="1280" Height="720">
                    <Grid ClipToBounds="True">
                        <Border CornerRadius="22">
                            <Grid x:Name="PreviewContainer">
                                <controls:LivePreviewControl x:Name="LivePreview"/>
                                
                                <!-- Viewfinder grid overlay -->
                                    <Grid IsHitTestVisible="False">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Vertical lines -->
                                        <Rectangle Grid.Column="1" Grid.RowSpan="3" 
                                                  Width="1" HorizontalAlignment="Left"
                                                  Fill="White" Opacity="0.1"/>
                                        <Rectangle Grid.Column="2" Grid.RowSpan="3" 
                                                  Width="1" HorizontalAlignment="Left"
                                                  Fill="White" Opacity="0.1"/>
                                        
                                        <!-- Horizontal lines -->
                                        <Rectangle Grid.Row="1" Grid.ColumnSpan="3" 
                                                  Height="1" VerticalAlignment="Top"
                                                  Fill="White" Opacity="0.1"/>
                                        <Rectangle Grid.Row="2" Grid.ColumnSpan="3" 
                                                  Height="1" VerticalAlignment="Top"
                                                  Fill="White" Opacity="0.1"/>
                                    </Grid>
                                    
                                    <!-- Corner guides (border-white/30) -->
                                    <Canvas IsHitTestVisible="False">
                                        <!-- Top Left -->
                                        <Border Width="32" Height="32" 
                                                Canvas.Left="16" Canvas.Top="16"
                                                BorderBrush="White" 
                                                BorderThickness="2,2,0,0"
                                                Opacity="0.3"/>
                                        <!-- Top Right -->
                                        <Border Width="32" Height="32" 
                                                Canvas.Right="16" Canvas.Top="16"
                                                BorderBrush="White" 
                                                BorderThickness="0,2,2,0"
                                                Opacity="0.3"/>
                                        <!-- Bottom Left -->
                                        <Border Width="32" Height="32" 
                                                Canvas.Left="16" Canvas.Bottom="16"
                                                BorderBrush="White" 
                                                BorderThickness="2,0,0,2"
                                                Opacity="0.3"/>
                                        <!-- Bottom Right -->
                                        <Border Width="32" Height="32" 
                                                Canvas.Right="16" Canvas.Bottom="16"
                                                BorderBrush="White" 
                                                BorderThickness="0,0,2,2"
                                                Opacity="0.3"/>
                                    </Canvas>
                                </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Viewbox>

            <!-- Filter Options (gap-3 = 12px) -->
            <Grid Grid.Row="3" Margin="0,24,0,32">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    
                    <!-- Glow Chip (Active by default) -->
                    <Border Name="GlowChip"
                            Margin="6"
                            CornerRadius="2"
                            Padding="20,10"
                            BorderBrush="#F0C74A"
                            BorderThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="GlowChip_Click">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F5E54C" Offset="0"/>
                                <GradientStop Color="#D6950F" Offset="0.5"/>
                                <GradientStop Color="#EAB308" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#EAB308" BlurRadius="30" ShadowDepth="4" Opacity="0.4"/>
                        </Border.Effect>
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="50" CenterY="20"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.05" Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.05" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1" Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âœ¨"
                                      FontSize="12"
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="GLOW"
                                      FontSize="12"
                                      FontWeight="Medium"
                                      Foreground="White"
                                      VerticalAlignment="Center">
                                <TextBlock.RenderTransform>
                                    <ScaleTransform ScaleX="1.1" ScaleY="1"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Moody Chip -->
                    <Border Name="MoodyChip"
                            Margin="6"
                            Background="Transparent"
                            CornerRadius="0"
                            Padding="20,12"
                            BorderBrush="#32312E"
                            BorderThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="MoodyChip_Click">
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="50" CenterY="20"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’œ"
                                      FontSize="16"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="Moody"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Dreamy Chip -->
                    <Border Name="DreamyChip"
                            Margin="6"
                            Background="Transparent"
                            CornerRadius="0"
                            Padding="20,12"
                            BorderBrush="#32312E"
                            BorderThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="DreamyChip_Click">
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="50" CenterY="20"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â˜ï¸"
                                      FontSize="16"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="Dreamy"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Fire Chip -->
                    <Border Name="FireChip"
                            Margin="6"
                            Background="Transparent"
                            CornerRadius="0"
                            Padding="20,12"
                            BorderBrush="#32312E"
                            BorderThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="FireChip_Click">
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="50" CenterY="20"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”¥"
                                      FontSize="16"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="Fire"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Retro Chip -->
                    <Border Name="RetroChip"
                            Margin="6"
                            Background="Transparent"
                            CornerRadius="0"
                            Padding="20,12"
                            BorderBrush="#32312E"
                            BorderThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="RetroChip_Click">
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="50" CenterY="20"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“º"
                                      FontSize="16"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="Retro"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Mono Chip -->
                    <Border Name="MonoChip"
                            Margin="6"
                            Background="Transparent"
                            CornerRadius="0"
                            Padding="20,12"
                            BorderBrush="#32312E"
                            BorderThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="MonoChip_Click">
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="50" CenterY="20"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ–¤"
                                      FontSize="16"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="Mono"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Normal Chip -->
                    <Border Name="NormalChip"
                            Margin="6"
                            Background="Transparent"
                            CornerRadius="0"
                            Padding="20,12"
                            BorderBrush="#32312E"
                            BorderThickness="1"
                            Cursor="Hand"
                            MouseLeftButtonDown="NormalChip_Click">
                        <Border.RenderTransform>
                            <ScaleTransform CenterX="50" CenterY="20"/>
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.05" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“·"
                                      FontSize="16"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="Normal"
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="#F8F5F0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Bottom Controls (gap-6 = 24px) -->
            <Grid Grid.Row="4" Margin="0,0,0,32">
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    

                    <!-- Capture/Shutter Button (shutter-button class) -->
                    <Button Name="CaptureButton"
                            Width="72" Height="72"
                            Cursor="Hand"
                            Click="CaptureButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="36"
                                        BorderThickness="0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#EAB308" Offset="0"/>
                                            <GradientStop Color="#D6AD70" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#EAB308" BlurRadius="25" ShadowDepth="0" Opacity="0.6"/>
                                    </Border.Effect>
                                    <fa:PackIconFontAwesome Kind="CameraSolid"
                                                           Width="32" Height="32"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
