<Window x:Class="PhotoBooth.Pages.UpdateCodesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Machine &amp; Site Code" 
        Height="450" 
        Width="500"
        MinHeight="400"
        MinWidth="450"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        SizeToContent="Manual">
    
    <Grid>
        <!-- Background with blur effect -->
        <Border Background="#AA221017">
            <Border.Effect>
                <BlurEffect Radius="20"/>
            </Border.Effect>
        </Border>
        
        <!-- Semi-transparent overlay -->
        <Border Background="#DD221017"/>
        
        <!-- Title bar for dragging -->
        <Border Name="TitleBar"
                Height="50"
                Background="Transparent"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                Cursor="SizeAll"
                VerticalAlignment="Top"/>
        
        <Border Background="#1A161024"
                CornerRadius="20"
                BorderBrush="#33FFFFFF"
                BorderThickness="1"
                Margin="25"
                Padding="35">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="40" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <TextBlock Grid.Row="0" 
                          Text="Update Codes"
                          FontSize="24"
                          FontWeight="Black"
                          Foreground="White"
                          Margin="0,0,0,25"/>
                
                <!-- Input Fields -->
                <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,10,0,0">
                    <TextBlock Text="Machine Code:" 
                              FontSize="15"
                              FontWeight="SemiBold"
                              Foreground="#D8D0DC"
                              Margin="0,0,0,10"/>
                    <TextBox Name="MachineCodeTextBox"
                            FontSize="16"
                            Padding="14,12"
                            Background="#18000000"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1"
                            Foreground="White"
                            MinHeight="45"
                            Margin="0,0,0,25"
                            KeyDown="TextBox_KeyDown"/>
                    
                    <TextBlock Text="Site Code:" 
                              FontSize="15"
                              FontWeight="SemiBold"
                              Foreground="#D8D0DC"
                              Margin="0,0,0,10"/>
                    <TextBox Name="SiteCodeTextBox"
                            FontSize="16"
                            Padding="14,12"
                            Background="#18000000"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1"
                            Foreground="White"
                            MinHeight="45"
                            Margin="0,0,0,0"
                            KeyDown="TextBox_KeyDown"/>
                </StackPanel>
                
                <!-- Buttons -->
                <StackPanel Grid.Row="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Margin="0,30,0,0">
                    <Button Name="CancelButton"
                           Content="Cancel"
                           Background="#333333"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Padding="20,10"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="CancelButton_Click"
                           Margin="0,0,10,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="20"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button Name="SaveButton"
                           Content="Save"
                           Background="#f62585"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Padding="20,10"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="SaveButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="20"
                                        Padding="{TemplateBinding Padding}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#f62585" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
